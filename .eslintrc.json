{
  "parserOptions": {
    "sourceType": "module",
    "project": ["./jsconfig.json"]
  },
  "extends": [
    "plugin:vue/essential",
    "standard"
  ],
  "plugins": ["prettier", "html"],
  "rules": {
    "indent": "off",
    "vue/component-tags-order": "off",
    "prettier/prettier": "error",
    "space-before-function-paren": [
      "error",
      {
        "anonymous": "always",
        "named": "never",
        "asyncArrow": "always"
      }
    ]
  },
  "ignorePatterns": ["node_modules/**", "**/static/**"]
}

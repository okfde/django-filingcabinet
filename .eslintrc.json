{
  "parserOptions": {
    "sourceType": "module",
    "parser": "@babel/eslint-parser",
    "project": ["./jsconfig.json"]
  },
  "extends": [
    "prettier",
    "plugin:vue/essential"
  ],
  "plugins": ["prettier", "vue"],
  "rules": {
    "indent": "off",
    "vue/component-tags-order": "off",
    "prettier/prettier": "error"
  },
  "ignorePatterns": ["node_modules/**"]
}

{
  "parserOptions": {
    "sourceType": "module",
    "project": [
      "./jsconfig.json"
    ]
  },
  "extends": [
    "eslint:recommended",
    "plugin:vue/vue3-recommended",
    "prettier"
  ],
  "plugins": [
    "prettier",
    "html"
  ],
  "rules": {
    "indent": "off",
    "vue/html-self-closing": "off",
    "vue/component-tags-order": "off",
    "prettier/prettier": "error",
    "space-before-function-paren": [
      "error",
      {
        "anonymous": "always",
        "named": "never",
        "asyncArrow": "always"
      }
    ]
  },
  "ignorePatterns": [
    "node_modules/**",
    "**/static/**"
  ]
}
